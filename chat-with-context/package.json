{
  "name": "@sib-swiss/chat-with-context",
  "version": "0.0.6",
  "description": "A web component to easily deploy a chat with context.",
  "license": "MIT",
  "author": {
    "name": "Vincent Emonet",
    "email": "vincent.emonet@gmail.com"
  },
  "type": "module",
  "main": "dist/chat-with-context.umd.cjs",
  "module": "dist/chat-with-context.js",
  "types": "dist/src/chat-with-context.d.ts",
  "files": [
    "dist/*",
    "../../LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:css": "npx tailwindcss build -o temp.css && echo \".chat-with-context {\" > src/style.css && cat temp.css >> src/style.css && echo \"}\" >> src/style.css && rm temp.css",
    "build:demo": "rm -rf ../src/sparql_llm/webapp && cd demo && vite build",
    "test": "npm run lint && vitest run",
    "fmt": "prettier --write . && eslint \"**/*.{ts,tsx,html,json}\" --fix",
    "lint": "prettier --check . && eslint \"**/*.{ts,tsx,html,json}\"",
    "upgrade": "npx npm-check-updates -u && npm i",
    "version": "npm run lint && npm run build && npm publish"
  },
  "dependencies": {
    "dompurify": "^3.2.3",
    "feather-icons": "^4.29.2",
    "highlight.js": "^11.10.0",
    "marked": "^15.0.3",
    "solid-element": "^1.9.1",
    "solid-js": "^1.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/eslint__js": "^8.42.3",
    "@types/feather-icons": "^4.29.4",
    "@types/node": "^22.10.2",
    "@types/sparqljs": "^3.1.12",
    "auto-changelog": "^2.5.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-plugin-solid": "^0.14.5",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.16",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "chat",
    "chatbot",
    "LLM",
    "RAG"
  ],
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": false,
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "useTabs": false,
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sib-swiss/sparql-llm.git"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}
